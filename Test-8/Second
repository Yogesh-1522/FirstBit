#include <stdio.h>
#include <string.h>


void reverseString(char str[]) {
    int len = strlen(str);
    char rev[100];   

   
    for(int i = 0; i < len; i++) {
        rev[i] = str[len - 1 - i];
    }
    rev[len] = '\0'; 

    
    strcpy(str, rev);
}

int main() {
    char str[100];

    printf("Enter a string: ");
    scanf("%s", str);

    reverseString(str);  
    printf("Reversed string: %s\n", str);

    return 0;
}

